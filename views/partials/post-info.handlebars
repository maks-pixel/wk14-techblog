<div class="card-header">
        <a href="/posts/{{id}}" target="_blank">{{title}}</a>
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>{{description}}</p>
          <footer class="blockquote-footer">created by: {{user.username}} on
            {{created_at}}
            |
            <a href="/posts/{{id}}">{{comments.length}} comment(s)</a>
          </footer>
        </blockquote>
      </div>